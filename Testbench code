module tb;
    reg  [3:0] A, B;
    reg  Cin;
    wire [3:0] Sum;
    wire Cout;

    ripple_carry_adder uut (
        .A(A),
        .B(B),
        .Cin(Cin),
        .Sum(Sum),
        .Cout(Cout)
    );

    initial begin

        Cin = 0; A = 4'b0000; B = 4'b0000; #20;
        A = 4'b0011; B = 4'b0101; Cin = 0; #20;
        A = 4'b1111; B = 4'b0001; Cin = 0; #20;
        A = 4'b1010; B = 4'b0101; Cin = 1; #20;
        A = 4'b1111; B = 4'b1111; Cin = 1; #20;

     
    end
endmodule
